<UserControl x:Class="CascadeStudio.TrainingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CascadeStudio"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:numeric="http://gu.se/NumericInput"
             xmlns:units="http://Gu.com/Units"
             DataContext="{x:Static local:TrainingViewModel.Instance}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Width:" />
        <numeric:IntBox Grid.Row="0"
                        Grid.Column="1"
                        MinValue="1"
                        Value="{Binding Width}" />

        <Label Grid.Row="1"
               Grid.Column="0"
               Content="Height:" />
        <numeric:IntBox Grid.Row="1"
                        Grid.Column="1"
                        MinValue="1"
                        Value="{Binding Height}" />

        <GroupBox Grid.Row="2"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Header="Vec file">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="MaxAngleX:" />
                <numeric:DoubleBox Grid.Row="0"
                                   Grid.Column="1"
                                   DecimalDigits="-2"
                                   MaxValue="360"
                                   MinValue="0"
                                   Value="{Binding MaxAngleX, Converter={units:AngleConverter Unit=°}}" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="MaxAngleY:" />
                <numeric:DoubleBox Grid.Row="1"
                                   Grid.Column="1"
                                   DecimalDigits="-2"
                                   MaxValue="360"
                                   MinValue="0"
                                   Value="{Binding MaxAngleY, Converter={units:AngleConverter Unit=°}}" />

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="MaxAngleZ:" />
                <numeric:DoubleBox Grid.Row="2"
                                   Grid.Column="1"
                                   DecimalDigits="-2"
                                   MaxValue="360"
                                   MinValue="0"
                                   Value="{Binding MaxAngleZ, Converter={units:AngleConverter Unit=°}}" />

                <Label Grid.Row="3"
                       Grid.Column="0"
                       Content="BackgroundColour:" />
                <numeric:IntBox Grid.Row="3"
                                Grid.Column="1"
                                MaxValue="255"
                                MinValue="0"
                                Value="{Binding BackgroundColour}" />

                <Label Grid.Row="4"
                       Grid.Column="0"
                       Content="BackgroundThreshold:" />
                <numeric:IntBox Grid.Row="4"
                                Grid.Column="1"
                                MaxValue="255"
                                MinValue="0"
                                Value="{Binding BackgroundThreshold}" />

                <Label Grid.Row="5"
                       Grid.Column="0"
                       Content="MaxIntensityDeviation:" />
                <numeric:IntBox Grid.Row="5"
                                Grid.Column="1"
                                MaxValue="255"
                                MinValue="0"
                                Value="{Binding MaxIntensityDeviation}" />

                <Label Grid.Row="6"
                       Grid.Column="0"
                       Content="Inverted:" />
                <CheckBox Grid.Row="6"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          IsChecked="{Binding Inverted}" />

                <Label Grid.Row="7"
                       Grid.Column="0"
                       Content="InvertRandomly:" />
                <CheckBox Grid.Row="7"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          IsChecked="{Binding InvertRandomly}" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
